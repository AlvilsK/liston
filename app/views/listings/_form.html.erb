<div class="form-horizontal">
  <fieldset>
    <legend>Add a listing</legend>
    <div class="form-inputs">
      <%= simple_form_for @listing do |f| %>
      <%= f.input :title %>
      <%= f.input :description %>
      <%= f.input :price %>
      <%= f.button :submit, class: "form-actions" %>
    <% end %>
    </div>
  </fieldset>
</div>