<% @listings.each do |listing| %>

<!-- Project one -->
<div class="row">
    <div class="col-md-7">
        <a href="#">
            <img class="img-responsive" src="http://placehold.it/700x300" alt="">
        </a>
    </div>
    <div class="col-md-5">
        <h3><%= link_to listing.title, listing_path(listing) %></h3>
        <h4>Description</h4>
        <p><%= listing.description %></p>
        <%= link_to '<span class="glyphicon glyphicon-chevron-right"></span> View listing'.html_safe, listing_path(listing), class: 'btn btn-primary' %>
    </div>
</div>
<!-- /.row -->

<hr>

<% end %>

